<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tab_Layout_tab"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#E38A7C"
            android:gravity="center"
            android:text="底部导航栏之 TabLayout＋Fragment"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tab_bottom_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="#74D6AF"
            android:gravity="center"
            android:text="底部导航栏之 BottomNavigationView＋Fragment"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tab_fragment_tab_host"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="#FEBB50"
            android:gravity="center"
            android:text="底部导航栏之 FragmentTabHost＋Fragment"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tab_radio_group"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="#C79EFE"
            android:gravity="center"
            android:text="底部导航栏之 RadioGroupButton＋Fragment"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tab_custom_view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="#74D6AF"
            android:gravity="center"
            android:text="底部导航栏之  自定义Tab View ＋Fragment"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>